pipeline {
    agent {
        docker { image 'gradle:6.6.1-jre14-openj9' }
    }

    stages {
        stage ('Compile') {
            steps {
              sh label: 'Compilar codigo', script: 'cd calculator && ls -ltr && chmod 740 * && ls -ltr && gradle test'
            }        
        }

        stage ('Unit Tests') {
            steps {
              sh label: 'Ejecutar test unitarios', script: 'cd calculator && gradle test'
            }
        }
    }
      post {
        cleanup {
            //Clean Workspace
            cleanWs()
        }
    }
}

