pipeline {
    agent any 
        
    options {
        timestamps()
        disableConcurrentBuilds()
    }
    
    stages {
        stage ('Compile') {
            steps {
              sh label: 'Compilar codigo', script: 'mv calculator/ && gradlew compileJava'
            }        
        }

        stage ('Unit Tests') {
            steps {
              sh label: 'Ejecutar test unitarios', script: 'mv calculator && gradlew test'
            }
        }
    }
      post {
        cleanup {
            //Clean Workspace
            cleanWs()
        }
    }
}

